<h1>Product list</h1>
<ul>
</ul>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-10 col-sm-offset-1">
        <div class="product" id="product-<%= product.id %>">
          <div class='product-upvote'>
            <%= link_to upvote_product_path(product), method: :post, remote: true do %>
              <%= product.votes_for.count %>
            <% end %>
          </div>
          <div class='product-body'>
            <h2><%= product.name %></h2>
            <p><%= product.tagline %><br><%= product.url %></p>
          </div>
          <div class='product-controls'>
            <i class="fa fa-bars product-control product-control-hidden"></i>
            <i class="fa fa-star product-control product-control-hidden"></i>
            <div class="product-control">
              <div class="user-badge-container ">
                <%= image_tag product.user.avatar_url, class:"avatar" %>
                <div class="user-badge user-badge-black user-badge-bordered">M</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


